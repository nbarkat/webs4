<?xml version="1.0" encoding="UTF-8"?>
<note xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">


<display name="Shop app">
    <description>Shop application which uses Tomcat corp edition development and business</description>

    <servlet>
      <servlet-name>Register</servlet-name>
      <servlet-class>shop.server.RegisterServlet</servlet-class>
      <init-param>
        <param-name>year</param-name>
        <param-value>2018</param-value>
      </init-param>
    </servlet>

    <servlet>
      <servlet-name>Order</servlet-name>
      <servlet-class>shop.server.OrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>register</servlet-name>
      <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
      <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
      <error-code>500</error-code>
      <location>/errors/servererror.jsp</location>
    </error-page>

    <web-app>
      <session-config>
        <session-timeout>120</session-timeout>
      </session-config>
    </web-app>

    <web-app>
      <display-name>Backup Shop App</display-name>
      <description>Backup app for Shop</description>
    </web-app>

  </display>
  </note>
